{
  "private": true,
  "description": "A generic gateway and smart contract library for cross-chain data retrieval",
  "engines": {
    "node": ">=14"
  },
  "workspaces": {
    "packages": [
      "evm-gateway",
      "l1-gateway",
      "evm-verifier",
      "l1-verifier"
    ],
    "nohoist": [
      "**/@nomiclabs/**",
      "**/typescript",
      "**/ts-node",
      "**/@typechain/**",
      "hardhat",
      "husky",
      "**/@eth-optimism/**"
    ]
  },
  "scripts": {
    "env": "env",
    "prepare": "husky install",
    "test": "yarn workspaces run test",
    "lint": "yarn workspaces run lint",
    "build": "yarn workspaces run build",
    "clean": "rm -fr node_modules && yarn workspaces run clean"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Arachnid/evm-l2-gateway.git"
  },
  "author": "@smartcontractkit",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/arachnid/evm-l2-gateway/issues"
  },
  "peerDependencies": {},
  "homepage": "https://github.com/arachnid/evm-l2-gateway#readme",
  "devDependencies": {
    "husky": "^6.0.0"
  },
  "dependencies": {},
  "resolutions": {
    "@types/express-serve-static-core": "4.17.20",
    "@types/express": "4.17.2"
  }
}